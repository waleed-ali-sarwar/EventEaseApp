@page "/about"
@using Microsoft.JSInterop
@inject IJSRuntime JSRuntime

<PageTitle>About Event Ease</PageTitle>

<!-- Hero Section with Background -->
<div class="bg-primary text-white py-5 mb-5 rounded shadow">
    <div class="container">
        <div class="row text-center">
            <div class="col">
                <i class="bi bi-calendar-event display-3 mb-3"></i>
                <h1 class="display-4 fw-bold">About EventEase</h1>
                <p class="lead">Simplifying event management for everyone</p>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2"></div>
        <div class="card shadow-sm mb-4 border-0">
            <div class="card-body">
                <p class="lead">
                    <i class="bi bi-info-circle-fill text-primary me-2"></i>
                    The <strong>EventEase</strong> project was developed by <strong>Waleed Ali Sarwar</strong> as part
                    of the
                    <strong>Blazor for Front-End Development Course</strong>, a module in the
                    <strong>Microsoft Front-End Developer Professional Certificate</strong> program.
                </p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card shadow-sm mb-4 border-0"></div>
        <div class="card-body">
            <h2 class="h3 mb-3 fw-bold">
                <i class="bi bi-star-fill text-warning me-2"></i>Key Features
            </h2>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <i class="bi bi-ui-checks text-success me-2"></i>
                    <strong>Interactive Registration Form</strong>:
                    A user-friendly form powered by Blazor's <code>DataAnnotationsValidator</code>.
                </li>
                <li class="list-group-item">
                    <i class="bi bi-database-check text-success me-2"></i>
                    <strong>State Management</strong>:
                    Tracks user sessions and attendees using Blazor's scoped services.
                </li>
                <li class="list-group-item">
                    <i class="bi bi-list-ul text-success me-2"></i>
                    <strong>Dynamic Event List</strong>:
                    Displays event data fetched from a JSON file.
                </li>
                <li class="list-group-item">
                    <i class="bi bi-card-list text-success me-2"></i>
                    <strong>Event Details Page</strong>:
                    Dynamically displays comprehensive event information.
                </li>
                <li class="list-group-item">
                    <i class="bi bi-phone text-success me-2"></i>
                    <strong>Responsive Design</strong>:
                    Ensures compatibility across all devices.
                </li>
            </ul>
        </div>
    </div>
</div>


<div class="row"></div>
<div class="col-md-8 offset-md-2">
    <div class="card shadow-sm mb-4 border-0">
        <div class="card-body">
            <h2 class="h3 mb-3 fw-bold">
                <i class="bi bi-person-badge text-primary me-2"></i>Role and Contributions
            </h2>
            <p>
                <strong>Waleed Ali Sarwar</strong> played a pivotal role in the development of EventEase:
            </p>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <i class="bi bi-diagram-3 text-info me-2"></i>
                    Architecting and implementing core functionalities.
                </li>
                <li class="list-group-item">
                    <i class="bi bi-window text-info me-2"></i>
                    Designing reusable Blazor components.
                </li>
                <li class="list-group-item">
                    <i class="bi bi-filetype-json text-info me-2"></i>
                    Integrating JSON-based data sources.
                </li>
                <li class="list-group-item">
                    <i class="bi bi-check-circle text-info me-2"></i>
                    Delivering a production-ready Blazor project.
                </li>
            </ul>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card shadow-sm mb-4 border-0">
            <div class="card-body">
                <h2 class="h3 mb-3 fw-bold">
                    <i class="bi bi-award text-warning me-2"></i>Professional Certificate
                </h2>
                <p>
                    This project was completed as part of the <strong>Microsoft Front-End Developer Professional
                        Certificate</strong>, specifically within the <strong>Blazor for Front-End Development
                        Course</strong>.
                </p>
                <p><i class="bi bi-calendar3 text-secondary me-2"></i><strong>Creation Date:</strong> 14-March-2025</p>
            </div>
        </div>
    </div>
</div>

<div class="row mb-5">
    <div class="col-md-8 offset-md-2">
        <div class="card shadow-sm border-0 bg-light">
            <div class="card-body text-center">
                <h2 class="h3 mb-3 fw-bold">
                    <i class="bi bi-person-circle text-primary me-2"></i>Author Information
                </h2>
                <p>
                    <strong>Name:</strong> Waleed Ali Sarwar<br />
                    <strong><i class="bi bi-linkedin text-primary"></i> LinkedIn:</strong>
                    <a href="https://www.linkedin.com/in/waleed-ali-sarwar/" target="_blank" class="link-primary">
                        Waleed Ali Sarwar
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        // Make sure Bootstrap Icons are available
        await JSRuntime.InvokeVoidAsync("eval", @"
if (!document.getElementById('bootstrap-icons')) {
let link = document.createElement('link');
link.id = 'bootstrap-icons';
link.rel = 'stylesheet';
link.href = 'https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css';
document.head.appendChild(link);
}
");
    }
}
